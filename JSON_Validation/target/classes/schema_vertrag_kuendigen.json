{
  "$schema": "https://json-schema.org/draft-07/schema",
  "description": "Schema für Vertrag Kündigen",
  "title": "Vertrag Kündigen",
  "type": "object",
  "properties": {
    "vertrag": {
      "type": "object",
      "properties": {
        "vertragsId": {
          "type": "string"
        },
        "vertragskonditionen": {
          "type": "object",
          "properties": {
            "vertragslaufzeit": {
              "type": "object",
              "properties": {
                "enddatum": {
                  "type": "string",
                  "format": "date"
                }
              },
              "required": [
                "enddatum"
              ]
            }
          },
          "required": [
            "vertragslaufzeit"
          ]
        },
        "vertragSonstigeAttribute": {
          "type": "array",
          "minItems": 3,
          "allOf": [
            {
              "contains": {
                "properties": {
                  "attribute": {
                    "const": "abgangsart"
                  },
                  "wert": {
                    "type": "string",
                    "enum": [
                      "Aufhebung wegen Kundenauszug",
                      "Aufhebung wegen Stilllegung",
                      "Aufhebung wegen storniertem Vertragsverhältnis",
                      "Lieferende wegen Auszug",
                      "Lieferende wegen Umzug",
                      "Ende EV ohne Folgelieferung",
                      "Lieferende wegen Stilllegung",
                      "Netznutzung Abmelden",
                      "ohne Prozessstart",
                      "Vertragsaufhebung manuell"
                    ]
                  }
                }
              }
            },
            {
              "contains": {
                "properties": {
                  "attribute": {
                    "const": "zaehlerstand"
                  },
                  "wert": {
                    "type": "number",
                    "minimum": 0
                  }
                }
              }
            },
            {
              "contains": {
                "properties": {
                  "attribute": {
                    "const": "ablesekennzeichen"
                  },
                  "wert": {
                    "type": "string",
                    "enum": [
                      "Ablesung durch Kunden",
                      "manuelle Schätzung",
                      "telefonisch angegeben",
                      "Schätzung durch Vertrieb"
                    ]
                  }
                }
              }
            }
          ],
          "items": {
            "type": "object",
            "properties": {
              "attribute": {
                "type": "string"
              },
              "wert": {
                "type": [
                  "string",
                  "boolean",
                  "number"
                ]
              }
            },
            "if": {
              "properties": {
                "attribute": {
                  "const": "sperrkennzeichen"
                }
              },
              "required": [
                "attribute"
              ]
            },
            "then": {
              "properties": {
                "wert": {
                  "type": "string",
                  "enum": [
                    "gesperrt",
                    "plombiert"
                  ]
                }
              },
              "required": [
                "wert"
              ]
            },
            "else": {
              "if": {
                "properties": {
                  "attribute": {
                    "const": "abrechnungskennzeichen"
                  }
                },
                "required": [
                  "attribute"
                ]
              },
              "then": {
                "properties": {
                  "wert": {
                    "type": "string",
                    "enum": [
                      "Leeranlage",
                      "nicht schätzen",
                      "keine vorzeitige Abrechnung (vom Programm gesetzt)",
                      "keine vorzeitige Abrechnung",
                      "keine Abrechnung"
                    ]
                  }
                },
                "required": [
                  "wert"
                ]
              },
              "else": {
                "if": {
                  "properties": {
                    "attribute": {
                      "const": "einmaligerRgAusschluss"
                    }
                  },
                  "required": [
                    "attribute"
                  ]
                },
                "then": {
                  "properties": {
                    "wert": {
                      "type": "string",
                      "enum": [
                        "Ausschluss maschinell prüfen",
                        "kein einmaliger Ausschluss(manuell)",
                        "einmaliger Ausschluss(maschinell)",
                        "einmaliger Ausschluss(manuell)"
                      ]
                    }
                  },
                  "required": [
                    "wert"
                  ]
                }
              }
            },
            "required": [
              "attribute",
              "wert"
            ]
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "vertragsId",
        "vertragskonditionen"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "vertrag"
  ]
}